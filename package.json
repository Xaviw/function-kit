{
  "name": "function-kit",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.7.0",
  "description": "零依赖多端函数工具库",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "clean": "npx -y rimraf node_modules docs/node_modules docs/dist functions/node_modules functions/dist playground/node_modules playground/dist",
    "taze": "npx -y taze -I",
    "postinstall": "npx -y simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@types/node": "^22.13.13",
    "eslint": "^9.23.0",
    "lint-staged": "^15.5.0",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.12.1",
    "typescript": "^5.8.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
