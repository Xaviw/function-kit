{
  "name": "function-kit",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.6.1",
  "description": "零依赖多端函数工具库",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "build:web": "node scripts/build.js web",
    "build:miniprogram": "node scripts/build.js miniprogram",
    "build:node": "node scripts/build.js node",
    "test": "vitest",
    "lint": "eslint . --fix",
    "clean": "npx -y rimraf node_modules",
    "taze": "npx -y taze -I",
    "postinstall": "npx -y simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.6.0",
    "@types/node": "^22.13.9",
    "@vitest/coverage-v8": "^3.0.8",
    "builtin-modules": "^5.0.0",
    "eslint": "^9.21.0",
    "inquirer": "^12.4.2",
    "lint-staged": "^15.4.3",
    "miniprogram-api-typings": "^4.0.5",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.9",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "simple-git-hooks": "^2.11.1",
    "tinyglobby": "^0.2.12",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "simple-git-hooks"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
