{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true, // 启用所有严格类型检查选项
    "declaration": false, // 输出类型声明交给 rollup-plugin-dts
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "skipLibCheck": true // 跳过声明文件类型检查（提升编译速度）
  }
}
