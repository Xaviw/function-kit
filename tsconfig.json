{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true, // 启用所有严格类型检查选项
    "declaration": true, // 生成.d.ts类型声明文件
    "forceConsistentCasingInFileNames": true, // 强制文件名大小写一致
    "skipLibCheck": true // 跳过声明文件类型检查（提升编译速度）
  }
}
